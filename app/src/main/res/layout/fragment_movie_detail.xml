<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="udacity.popular_movies.fragment.MovieDetailFragment">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/off_white"
        android:gravity="center_vertical"
        android:id="@+id/toolbar"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:id="@+id/iv_back_icon"
            android:src="@drawable/back_dark"/>


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:id="@+id/tv_movie_title"
            android:text="Movie Detail"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/action_bar_title_size"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="30dp"
            android:layout_margin="10dp"
            android:id="@+id/iv_fav_icon"
            android:src="@drawable/eventdetails_love_pressed"
            android:layout_height="30dp" />

    </LinearLayout>
</FrameLayout>
