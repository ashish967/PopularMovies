<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/iv_coverimage"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:background="@color/off_black"
            android:layout_height="300dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/gradient_title"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">


            <View
                android:layout_width="150dp"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_movie_title"
                android:textSize="20sp"
                android:layout_gravity="bottom|right"
                android:padding="20dp"
                android:text="Dark Knight"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" />


        </LinearLayout>





    </FrameLayout>


    <ImageView
        android:layout_width="134dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-150dp"
        android:id="@+id/iv_posterview"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/off_white"
        android:gravity="center_vertical"
        android:padding="@dimen/generic_padding"
        android:layout_height="wrap_content">




        <TextView
            android:id="@+id/tv_release_year"
            android:textSize="@dimen/action_bar_title_size"
            android:text="2015"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_duration"
            android:textSize="@dimen/action_bar_title_size"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="12:15 min."
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_rating"
            android:textSize="@dimen/action_bar_title_size"
            android:textColor="@color/black"
            android:text="8.5/10"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/generic_padding"
        android:text="Trailers"
        android:orientation="vertical"
        android:textColor="@color/white"
        android:id="@+id/trailer_containers"
        android:layout_height="wrap_content" />




    <TextView
        android:text="OVERVIEW"
        android:layout_margin="@dimen/generic_padding"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_overview"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/generic_padding"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/medium_text"
        android:text="REVIEWS"
        android:textColor="@color/black"
        android:layout_margin="@dimen/generic_padding"
        android:layout_height="wrap_content" />
</LinearLayout>